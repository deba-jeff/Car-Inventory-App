<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/list_item_car_image_imageView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitStart"
        tools:src="@drawable/lamborghini_venonan"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/car_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2015 Lamborghini Venona Roadster"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="#2B3D4D"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#394450"
                    tools:text="Price: $4500000" />

                <TextView
                    android:id="@+id/stock_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Stock: 3"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#394450" />
            </LinearLayout>

            <Button
                android:id="@+id/sale_decrement_button"
                android:layout_width="62dp"
                android:layout_weight="0"
                android:layout_height="match_parent"
                android:background="@drawable/overview_ripple_effect"
                android:textSize="15sp"
                android:text="Sell"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:focusable="false"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>